@model Product
@{
    var path = "~/images/" + Model.photoPath;
}
<div class="card">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>

    <div class="card-body">
        <img src="@path" class="img-thumbnail" asp-append-version="true"/>
        <h4 class="text-danger">Price: @Model.Price</h4>
        <h4>Short description: @Model.shortDescription</h4>
        <h4>Details: @Model.longDescription</h4>
    </div>
</div>
